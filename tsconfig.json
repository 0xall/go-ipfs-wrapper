{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2017", "es2016", "es2015", "dom"],
    "module": "commonjs",
    "allowJs": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "sourceMap": false,
    "types": ["node"],
    "experimentalDecorators": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "paths": {
      "*": ["./src/lib/index.ts"]
    }
  },
  "files": [
    "./src/index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
